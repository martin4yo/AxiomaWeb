{
  "name": "axioma-print-manager",
  "version": "1.0.0",
  "description": "Print Manager para Axioma Web - Impresión térmica automática",
  "main": "server-thermal-windows.js",
  "scripts": {
    "build": "pkg . --targets node18-win-x64 --output build/AxiomaPrintManager.exe",
    "build-installer": "node build-installer.js"
  },
  "bin": "server-thermal-windows.js",
  "pkg": {
    "assets": [
      "thermal-templates.js",
      "node_modules/**/*"
    ],
    "outputPath": "build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "qrcode": "^1.5.3",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
