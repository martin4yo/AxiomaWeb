// ===============================================
// üìã PRESUPUESTOS (QUOTES)
// ===============================================

model Quote {
  id          String    @id @default(cuid())
  tenantId    String    @map("tenant_id")
  quoteNumber String    @map("quote_number") // PRE-00001
  quoteDate   DateTime  @default(now()) @map("quote_date")
  validUntil  DateTime? @map("valid_until") @db.Date // Fecha de vencimiento del presupuesto

  // Cliente
  customerId   String? @map("customer_id")
  customer     Entity? @relation(fields: [customerId], references: [id], onDelete: SetNull)
  customerName String  @map("customer_name") // Denormalizado para hist√≥rico

  // Montos
  subtotal        Decimal @db.Decimal(15, 2)
  discountAmount  Decimal @default(0) @map("discount_amount") @db.Decimal(15, 2)
  discountPercent Decimal @default(0) @map("discount_percent") @db.Decimal(5, 2)
  taxAmount       Decimal @default(0) @map("tax_amount") @db.Decimal(15, 2)
  totalAmount     Decimal @map("total_amount") @db.Decimal(15, 2)

  // Datos adicionales
  notes              String? @db.Text
  termsAndConditions String? @map("terms_and_conditions") @db.Text
  internalNotes      String? @map("internal_notes") @db.Text // Notas internas no visibles en PDF

  // Estado
  status QuoteStatus @default(PENDING)

  // Conversi√≥n (puede haber m√∫ltiples conversiones parciales)
  convertedToSales  Sale[]
  convertedToOrders CustomerOrder[] @relation("OrderFromQuote")

  // Relaciones
  tenant Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  items  QuoteItem[]

  // Auditor√≠a
  createdBy String   @map("created_by")
  creator   User     @relation(fields: [createdBy], references: [id])
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([tenantId, quoteNumber])
  @@index([tenantId])
  @@index([customerId])
  @@index([status])
  @@index([quoteDate])
  @@map("quotes")
}

enum QuoteStatus {
  PENDING // Pendiente de respuesta del cliente
  APPROVED // Cliente aprob√≥
  REJECTED // Cliente rechaz√≥
  EXPIRED // Venci√≥ la validez
  PARTIALLY_CONVERTED // Conversi√≥n parcial en progreso
  FULLY_CONVERTED // Totalmente convertido
  CANCELLED // Cancelado por el negocio
}

// üì¶ ESTADO DE PEDIDO
enum OrderStatus {
  DRAFT // Borrador - editable
  CONFIRMED // Confirmado - esperando preparaci√≥n
  PROCESSING // En preparaci√≥n
  READY // Listo para entregar
  PARTIALLY_INVOICED // Parcialmente facturado
  COMPLETED // Completado (totalmente facturado)
  CANCELLED // Cancelado
}

// üìä COMPORTAMIENTO DE STOCK
enum StockBehavior {
  NONE // Sin afectar stock
  RESERVE // Reservar stock (no disponible para otras ventas)
  DEDUCT // Descontar stock inmediatamente
}

model QuoteItem {
  id      String @id @default(cuid())
  quoteId String @map("quote_id")
  quote   Quote  @relation(fields: [quoteId], references: [id], onDelete: Cascade)

  lineNumber Int @map("line_number")

  // Producto
  productId   String?  @map("product_id")
  product     Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
  productSku  String?  @map("product_sku")
  productName String   @map("product_name")
  description String?  @db.Text

  // Cantidades y precios
  quantity  Decimal @db.Decimal(15, 3)
  unitPrice Decimal @map("unit_price") @db.Decimal(15, 2)

  // Control de conversi√≥n parcial
  quantityConverted Decimal @default(0) @map("quantity_converted") @db.Decimal(15, 3) // Cantidad ya convertida a pedidos/ventas
  quantityPending   Decimal @map("quantity_pending") @db.Decimal(15, 3) // Calculado: quantity - quantityConverted

  // Descuentos
  discountPercent Decimal @default(0) @map("discount_percent") @db.Decimal(5, 2)
  discountAmount  Decimal @default(0) @map("discount_amount") @db.Decimal(15, 2)

  // Impuestos
  taxRate   Decimal @default(0) @map("tax_rate") @db.Decimal(5, 2)
  taxAmount Decimal @default(0) @map("tax_amount") @db.Decimal(15, 2)

  // Totales
  subtotal  Decimal @db.Decimal(15, 2) // quantity * unitPrice
  lineTotal Decimal @map("line_total") @db.Decimal(15, 2) // subtotal - discount + tax

  @@index([quoteId])
  @@map("quote_items")
}

// ===============================================
// üì¶ PEDIDOS (CUSTOMER ORDERS)
