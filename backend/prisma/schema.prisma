  quantityUsed     Decimal @default(0) @map("quantity_used") @db.Decimal(15, 3) // Consumido al facturar
  quantityReleased Decimal @default(0) @map("quantity_released") @db.Decimal(15, 3) // Liberado por cancelaci√≥n

  // Estado
  status String @default("active") // active, consumed, released

  // Auditor√≠a
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([orderId])
  @@index([productId, warehouseId])
  @@index([status])
  @@map("stock_reservations")
}
