import { PrismaClient } from '@prisma/client'
import bcrypt from 'bcrypt'

const prisma = new PrismaClient()

async function main() {
  console.log('ðŸ” Resetting all user passwords to 123456...')

  const hashedPassword = await bcrypt.hash('123456', 10)
  console.log('Generated hash:', hashedPassword)

  const result = await prisma.user.updateMany({
    data: {
      passwordHash: hashedPassword
    }
  })

  console.log(`âœ… Updated ${result.count} users`)

  // Show all users
  const users = await prisma.user.findMany({
    select: {
      email: true,
      firstName: true,
      lastName: true
    }
  })

  console.log('\nUsers updated:')
  users.forEach(user => {
    const fullName = [user.firstName, user.lastName].filter(Boolean).join(' ') || 'N/A'
    console.log(`  - ${user.email} (${fullName})`)
  })
}

main()
  .catch((e) => {
    console.error('ERROR:', e)
    process.exit(1)
  })
  .finally(async () => {
    await prisma.$disconnect()
  })
